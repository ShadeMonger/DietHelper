<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="24dp"
    android:paddingTop="14dp">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/name"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView4"
        android:layout_marginStart="26dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Name"
        android:id="@+id/textView4"
        android:layout_alignBaseline="@+id/name"
        android:layout_alignBottom="@+id/name"
        android:layout_alignParentStart="true"
        android:textColor="#000000" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email"
        android:layout_below="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_marginTop="20dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Email"
        android:id="@+id/textView5"
        android:layout_alignBaseline="@+id/email"
        android:layout_alignBottom="@+id/email"
        android:layout_alignEnd="@+id/textView4"
        android:textColor="#000000" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/age"
        android:layout_below="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_marginTop="20dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Age"
        android:id="@+id/textView6"
        android:layout_alignBaseline="@+id/age"
        android:layout_alignBottom="@+id/age"
        android:layout_alignStart="@+id/textView5"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Check mark your ailments (if any)"
        android:id="@+id/textView7"
        android:paddingBottom="5dp"
        android:layout_above="@+id/dis1"
        android:layout_centerHorizontal="true"
        android:textColor="#000000" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dis1"
        android:id="@+id/dis1"
        android:checked="false"
        android:layout_gravity="right|left"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/textView6"
        android:buttonTint="#000000" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dis2"
        android:id="@+id/dis2"
        android:checked="false"
        android:layout_below="@+id/textView7"
        android:layout_toEndOf="@+id/update"
        android:buttonTint="#000000" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dis3"
        android:id="@+id/dis3"
        android:checked="false"
        android:layout_below="@+id/dis1"
        android:layout_alignStart="@+id/dis1"
        android:buttonTint="#000000" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dis4"
        android:id="@+id/dis4"
        android:layout_below="@+id/dis2"
        android:layout_alignStart="@+id/dis2"
        android:checked="false"
        android:buttonTint="#000000" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dis5"
        android:id="@+id/dis5"
        android:checked="false"
        android:layout_below="@+id/dis3"
        android:layout_alignStart="@+id/dis3"
        android:buttonTint="#000000" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dis6"
        android:id="@+id/dis6"
        android:checked="false"
        android:layout_below="@+id/dis4"
        android:layout_alignStart="@+id/dis4"
        android:buttonTint="#000000" />

    <android.support.v7.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="UPDATE"
        android:id="@+id/update"
        android:layout_below="@+id/dis5"
        android:layout_centerHorizontal="true"
        android:textColor="#000000" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/changepass"
        android:src="@drawable/ic_password"
        android:layout_above="@+id/textView14"
        android:layout_alignStart="@+id/textView14"
        android:layout_alignEnd="@+id/textView14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Change Password"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/textView14"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textColor="#000000" />
</RelativeLayout>